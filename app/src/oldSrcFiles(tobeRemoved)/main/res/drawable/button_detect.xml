<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#BDBDBD" />
            <stroke
                android:width="1dp"
                android:color="#4A4A4A" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#BDBDBD"
                android:endColor="#4A4A4A"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#4A4A4A" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>